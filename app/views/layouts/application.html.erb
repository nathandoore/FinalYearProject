<!DOCTYPE html>
<html>

<head>
    <title>Goo Hire</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
            <%= csrf_meta_tags %>


<div class="divv">
<div class="topnav" id="myTopnav">
            
<% if logged_in? %>
<%= link_to "List Now", new_car_path, id: 'nav2' %>
  <div class="dropdown">
    <button class="dropbtn"><%= link_to current_user.username, user_path(current_user), id: 'nav2' %>
    </button>
    <div class="dropdown-content">
        <% @user = User.find(session[:user_id]) %>
        <%= link_to 'Edit My Account', edit_user_path(@user)%>
        <% if @user.total == 1 %>
        <div class="ShowAlert">
      <%= link_to 'My Listed Cars', cars_users_path%>
    </div>
    <% else %>
     <%= link_to 'My Listed Cars', cars_users_path%>
     <% end %>
      <%= link_to 'My Hire cars', cars_rented_path()%>
      <%= link_to 'Rentals History', histories_path %>
      <%= link_to 'Listing History', cars_listing_path %>
       <%= link_to "Log Out", logout_path, method: :delete %>
    </div>
  </div>

  <% else %>
<%= link_to "Sign Up", signup_path, id: 'nav2' %>
<%= link_to "Log In", login_path, id: 'nav2' %>
  <% end %>
  <%= link_to "Rent Now", cars_index_path(), id: 'nav2' %>
   <%= link_to "How GooHire works", homes_aboutus_path, id: 'nav2' %>
   <%= link_to "Home", root_path(), id: 'nav2' %>
   <div class="logo" ><%= image_tag "GooHire.png", :size=> "140x60" %>  </div>
            
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
</div>
</div>
    <div id="bodyContainer">
        <% flash.each do |name, msg| %>
            <ul>
                <li>
                    <%= msg %>
                </li>
            </ul>
            <%end%>
                <%= yield %>
    </div>

</head>

